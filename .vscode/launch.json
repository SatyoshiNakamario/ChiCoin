{
    "version": "0.2.0",
    "configurations": [

    {
        "type": "node",
        "request": "launch",
        "name": "Mocha Tests",
        "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
        "args": [
            "-u",
            "tdd",
            "--timeout",
            "999999",
            "--compilers",
            "js:babel-core/register",
            "--colors",
            "${workspaceRoot}/test"
        ],
        "internalConsoleOptions": "openOnSessionStart"
    }
    ],
    "compounds": []
}